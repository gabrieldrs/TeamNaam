.navbar.navbar-default.navbar-fixed-top
  div
    .navbar-header.col-sm-2(style='background:#1A242E; margin-right:5px;padding:0px;padding-left:5px;')
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.ion-cube
        | CS Tri-Mentoring
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        h4.nav.navbar-nav
          style.
            h4.nav a{ padding-left: 5px;padding-right: 5px;  }
        
          li
            a(href='/')
              span.label.label-info cohort 1
          
          li
            a(href='/')
              span.label.label-success cohort 2
          li
            a(href='/')
              span.label.label-warning cohort 3
          
          li
            a(href='/')
              span.label.label-danger cohort 4
            
          li(class=title=='API Examples'?'active':undefined)
            a(href='/') 
              span.label.label-default cohort 5
           
          li
            a(href='/')
              span.active.label.label-info cohort 6
          
            li
              a(href='/')
                span.label.label-success cohort 7
            li
              a(href='/')
                span.label.label-warning cohort 8

            li.active
              a(href='/')
                span.label.label-danger cohort 9
              
            
      ul.nav.navbar-nav.navbar-right(style='margin-right:25px;')
        if user
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout
