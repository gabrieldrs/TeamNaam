extends ../layout

block content
  .page-header(style="margin-top:250px;")
    h3 Student Information
  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.has-error
      label.col-sm-3.control-label(for='email') Student Number
      .col-sm-5
        input.form-control(type='email', name='email', id='email', value='#{user.email}')
    .form-group
      label.col-sm-3.control-label(for='name') First Name
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    .form-group
      label.col-sm-3.control-label(for='gravatar') Last Name
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    .form-group
      label.col-sm-3.control-label(for='gravatar') Academic Standing (Year)
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')


  .page-header
    h3 Contact
  form.form-horizontal(action='/account/profile', method='POST')
    .form-group.has-error
      label.col-sm-3.control-label(for='email') Email Address
      .col-sm-5
        input.form-control(type='email', name='email', id='email', value='#{user.email}')
    .form-group
      label.col-sm-3.control-label(for='name') Cellphone Number
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    .form-group
      label.col-sm-3.control-label(for='gravatar') Availability
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
                    
  .page-header
    h3 Personality
  form.form-horizontal(action='/account/profile', method='POST')
    .form-group
      label.col-sm-3.control-label(for='gravatar') Last Name
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    
  .page-header
    h3 Interests
    
  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-5
        input.form-control(type='email', name='email', id='email', value='#{user.email}')
    .form-group
      label.col-sm-3.control-label(for='name') Name
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    .form-group
      label.col-sm-3.control-label(for='gravatar') Gravatar
      .col-sm-5
        input.form-control(type='text', name='name', id='name', value='#{user.profile.name}')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          span.ion-edit
          | Update Profile

  .page-header
    h3 Change Password

  form.form-horizontal(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='password') New Password
      .col-sm-5
        input.form-control(type='password', name='password', id='password')
    .form-group
      label.col-sm-3.control-label(for='confirmPassword') Confirm Password
      .col-sm-5
        input.form-control(type='password', name='confirmPassword', id='confirmPassword')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          span.ion-locked
          | Change Password

  .page-header
    h3 Delete Account
  .col-sm-offset-1
    p You can delete your account, but keep in mind this action is irreversible.
    .col-sm-offset-2.col-sm-6
      form(action='/account/delete', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        button.btn.btn-danger(type='submit')
          span.ion-trash-b
          | Delete my account
